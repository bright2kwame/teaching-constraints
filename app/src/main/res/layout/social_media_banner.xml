<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textViewOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_small"
        android:text="@string/or"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="@dimen/activity_margin_small"
        android:background="@color/input_bg"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOr"
        app:layout_constraintEnd_toStartOf="@+id/textViewOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewOr" />


    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/activity_margin_small"
        android:background="@color/input_bg"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewOr"
        app:layout_constraintTop_toTopOf="@+id/textViewOr" />

    <ImageView
        android:id="@+id/imageViewFacebookLogo"
        android:layout_width="@dimen/reg_icon_size"
        android:layout_height="@dimen/reg_icon_size"
        android:layout_margin="@dimen/activity_margin_small"
        android:background="@drawable/register_icon_bg"
        android:scaleType="centerInside"
        android:src="@drawable/ic_icon_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOr" />

    <ImageView
        android:id="@+id/imageViewGoogle"
        android:layout_width="@dimen/reg_icon_size"
        android:layout_height="@dimen/reg_icon_size"
        android:layout_margin="@dimen/activity_margin_small"
        android:background="@drawable/register_icon_bg"
        android:scaleType="centerInside"
        android:src="@drawable/ic_icon_google"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFacebookLogo"
        app:layout_constraintTop_toBottomOf="@+id/textViewOr" />


    <ImageView
        android:id="@+id/imageViewApple"
        android:layout_width="@dimen/reg_icon_size"
        android:layout_height="@dimen/reg_icon_size"
        android:layout_margin="@dimen/activity_margin_small"
        android:background="@drawable/register_icon_bg"
        android:scaleType="centerInside"
        android:src="@drawable/ic_icon_apple"
        app:layout_constraintStart_toEndOf="@+id/imageViewFacebookLogo"
        app:layout_constraintTop_toBottomOf="@+id/textViewOr" />


</androidx.constraintlayout.widget.ConstraintLayout>