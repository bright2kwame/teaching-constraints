<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MESTEcommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_base</item>
        <item name="colorPrimaryVariant">@color/primary_base_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_base</item>
        <item name="colorSecondaryVariant">@color/primary_base_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MESTEcommerce.Fullscreen" parent="Theme.MESTEcommerce">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="EcommerceTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/input_bg</item>
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="boxStrokeWidth">@dimen/input_stroke_width</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/input_bg</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cardCornerRadius">@dimen/button_radius</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="backgroundTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/activity_margin_small</item>
    </style>

    <style name="MaterialCardViewStyleRounded" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">@dimen/input_corner_radius</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>